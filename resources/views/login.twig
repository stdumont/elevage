<!doctype html>
<html lang="en">

    <head>
        <base href="public/"/>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

        <title>Connexion</title>
        <link href="adminlte/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
        <link href="plugins/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css"/>
    </head>

    <body style="background-color: blue;">

        <div class="wrapper">
            <div class="row" style="padding-top: 7em;">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">Connexion Ã  l'application 'Elevage'</div>
                        <div class="panel-body">
                            <form action="{{ path_for('auth.login') }}" method="post" autocomplete="off">
                                <div class="form-group {{ errors.email ? ' has-error' : ''  }}">
                                    <label for="email">Email</label>
                                    <input type="email" name="email" id="email" class="form-control" value="{{ old.email }}"/>
                                    {% if errors.email %}
                                        <span class="help-block">{{ errors.email | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group {{ errors.password ? ' has-error' : ''  }}">
                                    <label for="password">Mot de passe</label>
                                    <input type="password" name="password" id="password" class="form-control"/>
                                    {% if errors.password %}
                                        <span class="help-block">{{ errors.password | first }}</span>
                                    {% endif %}
                                </div>
                                <button type="submit" class="btn btn-primary pull-right">Connexion</button>
                            </form>
                        </div>
                        <div class="panel-footer">
                            {% include 'templates/partials/flash.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- jQuery 3 -->
        <script src="plugins/jquery/dist/jquery.min.js" type="text/javascript"></script>
        <!-- Bootstrap 3.3.7 -->
        <script src="adminlte/bootstrap/js/bootstrap.min.js"></script>
    </body>

</html>
